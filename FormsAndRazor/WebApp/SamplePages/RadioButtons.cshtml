@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "RadioButtons";
    
    //we can also put the "var language = Request.Form["LanguageGroup];" in here
            //as well as the "var script..."
}

@section banner{
    <h1>Using RadioButton List</h1>
}

@* YOU MUST REMEMBER Razor page execute from TOP TO BOTTOM *@
@if (IsPost)
{
    var language = Request.Form["LanguageGroup"];
    var script = Request.Form["ScriptGroup"];
    if (language.IsEmpty() || script.IsEmpty())
    {
        <p><span style="color:firebrick">Make a selection from both, programs and coding.</span></p>
    }
    else
    {
        if (language.Equals("C#", StringComparison.OrdinalIgnoreCase))
        {
            <p>You will greatly enjoy the CPSC 1517 course as we use C#</p>
        }
        else
        {
            <p>Too bad. Unfortunately the CPSC 1517 course does not use @language</p>
        }

        if (script.Equals("Razor", StringComparison.OrdinalIgnoreCase))
        {
            <p>You will greatly enjoy the CPSC 1517 course as we use Razor Form.</p>
        }
        else
        {
            <p>Too bad. Unfortunately the CPSC 1517 course does not use @script</p>
        }
    }
}
else
{


}



<form id="theForm" method="post">
    <div class="row">
        <div class="offset-1">
            <label for="LanguageGroup">Select your favourite programming language:</label><br />
            <input type="radio" name="LanguageGroup" id="LanguageGroup" value="C#" />C#<br />
            <input type="radio" name="LanguageGroup" id="LanguageGroup" value="VB" />Visual Basic<br />
            <input type="radio" name="LanguageGroup" id="LanguageGroup" value="Cobol" />Cobol<br />
            <input type="radio" name="LanguageGroup" id="LanguageGroup" value="Fortran" />Fortran<br />
            <input type="radio" name="LanguageGroup" id="LanguageGroup" value="Pascal" />Pascal<br />
            <br />
            <label for="ScriptGroup">Select your favourite scripting code:</label><br />
            <input type="radio" name="ScriptGroup" id="ScriptGroup" value="JS" />Javascript<br />
            <input type="radio" name="ScriptGroup" id="ScriptGroup" value="Razor" />Razor<br />
            <input type="radio" name="ScriptGroup" id="ScriptGroup" value="PHP" />PHP<br />
            <br />
        </div>
    </div>

    <div class="row">
        <div class="offset-1">
            <button type="submit" name="theButton" id="theButton" value="submit">Submit</button>
        </div>
    </div>



</form>

